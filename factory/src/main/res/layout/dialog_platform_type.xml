<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_333"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_gravity="center"
    android:orientation="vertical">
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_platform"
        android:gravity="center_horizontal"
        android:textColor="#ED333333"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:textSize="@dimen/sp_16"
        />

    <LinearLayout
        android:id="@+id/ll_platform_fuyou"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_fuyou"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_22"
            android:layout_weight="1"
            android:textColor="#FF999999"
            android:text="@string/text_fuyou"
            android:textSize="@dimen/sp_15" />

        <CheckBox
            android:id="@+id/cb_fuyou"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@drawable/bg_checkbox_industry"
            android:button="@null"
            android:clickable="false" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_platform_ping_an"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_pingan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_22"
            android:layout_weight="1"
            android:textColor="#FF999999"
            android:text="@string/text_huifu"
            android:textSize="@dimen/sp_15" />

        <CheckBox
            android:id="@+id/cb_pingan"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@drawable/bg_checkbox_industry"
            android:button="@null"
            android:clickable="false" />

    </LinearLayout>




</LinearLayout>